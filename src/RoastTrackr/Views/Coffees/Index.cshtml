@model IEnumerable<RoastTrackr.Models.Coffee>

@{
    ViewData["Title"] = "Coffees";
}

<h2>Green Coffee Inventory</h2>

<p>
    <a class="btn btn-default" asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CoffeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CoffeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inventory)
        </td>
        <td>
            <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.CoffeeId">Edit</a> 
            <a class="btn btn-default" asp-action="Details" asp-route-id="@item.CoffeeId">Details</a> 
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CoffeeId">Delete</a>
        </td>
    </tr>
}
</table>
