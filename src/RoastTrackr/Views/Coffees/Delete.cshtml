@model RoastTrackr.Models.Coffee

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this coffee from your inventory?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Coffee Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CoffeeName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Inventory)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Inventory)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a class="btn btn-default" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
