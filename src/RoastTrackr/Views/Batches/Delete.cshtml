@model RoastTrackr.Models.Batch

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this batch?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Duration
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BatchTime)
        </dd>
        <dt>
           Weight
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BatchWeight)
        </dd>
        <dt>
           Batch Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CoffeeName)
        </dd>
        <dt>
           End Temperature
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndTemp)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a class="btn btn-default" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
